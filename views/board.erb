<section class="section">

  <div class="columns">
    <div class="column">
      <h1 class="title">RETRO: <%=h board[:name] %></h1>
    </div>
    <div class="column">
      <iframe frameborder="0" src="/boards/<%= board[:id] %>/countdown" style="width: 100%; height: 3rem"></iframe>
    </div>
  </div>

  <p class="content">
    <% if theme == "light" %>
      <a class="has-text-black" href="/mode/dark"> üåô </a>
    <% else %>
      <a class="has-text-white" href="/mode/light"> ‚òÄÔ∏è </a>
    <% end %>

    | <a href="/boards/<%= board[:id] %>/edit">Edit</a>
    | Export:
    <a href="/boards/<%= board[:id] %>/export/markdown">Markdown</a>
    <small class="has-text-grey-light">| <%= votes %> Remaining vote(s) for you.</small>
  </p>

  <div class="columns">
    <% board[:columns].each do |column| %>
      <div class="column">
        <h2 class="title is-5"><%=h column %></h2>

        <% board[:cards].select { |_, card| card[:column] == column }.each do |id, card| %>
          <div class="card mt-2" tabindex="-1">
            <div class="card-content">

              <div class="content">
                <% if card[:votes].count > 0 %>
                  <%=h card[:votes].count %> üëç
                <% end %>

                <%=h card[:message] %>
                <small class="has-text-grey-light"> -- <%=h card[:username] %></small>
              </div>

              <div class="content">

                <% if votes > 0 %>
                  <form class="is-inline" method="POST" action="/boards/<%= board[:id] %>/cards/<%= id %>/vote">
                    <button type="submit" class="button is-success is-outlined"> üëç </button>
                  </form>
                <% end %>

                <% if card[:votes].include?(userid) %>
                  <form class="is-inline" method="POST" action="/boards/<%= board[:id] %>/cards/<%= id %>/vote">
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit" class="button is-danger is-outlined"> üëé </button>
                  </form>
                <% end %>

                <% if card[:userid] == userid  %>
                  <form class="is-inline" method="post" action="/boards/<%= board[:id] %>/cards/<%= id %>">
                    <input type="hidden" name="_method" value="DELETE" />
                    <button type="submit" class="button is-danger is-outlined"> Delete ‚ùå </button>
                  </form>

                  <a class="button is-link is-outlined" href="/boards/<%= board[:id] %>/cards/<%= id %>/edit"> Edit ‚úèÔ∏è </a>
                <% end %>
              </div>

            </div>
          </div>

        <% end %>

        <form action="/boards/<%= board[:id] %>/cards" method="POST" class="mt-5">
          <input type="hidden" name="column" value="<%= column %>" />

          <div class="field has-addons is-fullwidth mt-2">
            <div class="control is-expanded">
              <input type="text" class="input" placeholder="What's on your mind?..." name="message" id="message" />
            </div>
            <div class="control">
              <button class="button" type="submit"> üì¢ </button>
            </div>
          </div>
        </form>

      </div>
    <% end %>
  </div>
</section>
